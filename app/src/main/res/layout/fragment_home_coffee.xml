<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fragment"
            type="com.project.starbucks_app.view.fragment.home.HomeCoffeeFragment" />
    </data>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.home.HomeCoffeeFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_coffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coffee"
                android:fontFamily="@font/santana"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="20sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="@drawable/gradation_effect"
                />

            <TextView
                android:id="@+id/tv_seeAllCoffee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View All Coffee"
                app:layout_constraintTop_toTopOf="@+id/tv_coffee"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15sp"
                android:onClick="@{() -> fragment.onViewAll()}"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cv_main_coffee"
                app:layout_constraintTop_toBottomOf="@+id/tv_coffee"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="6dp"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_main_coffee"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_coffee"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_frapuccino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Frapuccino"
                android:fontFamily="@font/santana"
                app:layout_constraintTop_toBottomOf="@+id/cv_main_coffee"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="20sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="@drawable/gradation_effect"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cv_main_frapuccino"
                app:layout_constraintTop_toBottomOf="@+id/tv_frapuccino"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="6dp"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_main_frapuccino"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_frapuccino"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_blended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blended"
                android:fontFamily="@font/santana"
                app:layout_constraintTop_toBottomOf="@+id/cv_main_frapuccino"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="20sp"
                android:textStyle="bold"
                android:textSize="25sp"
                android:background="@drawable/gradation_effect"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cv_main_blended"
                app:layout_constraintTop_toBottomOf="@+id/tv_blended"
                android:layout_marginTop="15dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="6dp"
                >

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_main_blended"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    app:layout_constraintTop_toBottomOf="@+id/cv_main_blended"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />

            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="100dp"
                app:layout_constraintTop_toBottomOf="@+id/cv_main_blended"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
</layout>