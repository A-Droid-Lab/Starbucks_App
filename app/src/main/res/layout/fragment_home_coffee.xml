<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.home.HomeCoffeeFragment">

    <TextView
        android:id="@+id/tv_coffee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coffee"
        android:fontFamily="@font/santana"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20sp"
        android:textStyle="bold"
        android:textSize="25sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_main_coffee"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_coffee"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

    <TextView
        android:id="@+id/tv_frapuccino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frapuccino"
        android:fontFamily="@font/santana"
        app:layout_constraintTop_toBottomOf="@+id/rcv_main_coffee"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20sp"
        android:textStyle="bold"
        android:textSize="25sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_main_frapuccino"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_frapuccino"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

    <TextView
        android:id="@+id/tv_blended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blended"
        android:fontFamily="@font/santana"
        app:layout_constraintTop_toBottomOf="@+id/rcv_main_frapuccino"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="20sp"
        android:textStyle="bold"
        android:textSize="25sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_main_blended"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_blended"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>